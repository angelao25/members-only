<h1> Posts </h1>

<ul>
    <% @posts.each do |post| %>
        <li>
            <h2><%= link_to post.title, posts_path(post) %></h2>
            <p><%= post.content %></p>
            <% if user_signed_in? %>
                <p>Author: <%= post.user.email %></p>
            <% end %>
        </li>
    <% end %>
</ul>
